<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <header>
        <div class="nav-item dropdown">
            <h1 class="title">Cat√°logo</h1>
            <a class="nav-link dropdown-toggle filter-button" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Filtros
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="#">Deportivas</a></li>
                  <li><a class="dropdown-item" href="#">Casuales</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <div class="dropdown-item">
                        <p href="#">Busca tu talla!</p>
                        <form class="dropdown-filter-form" action="">
                            <input class="dropdown-input" type="number" min="35" max="45" placeholder="35 - 44">
                            <input class="dropdown-submit" type="submit" >
                        </form>
                  </div>
                </li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="#">Ver todo...</a></li>
              </ul>
          </div>
    </header>
    <main class="main-container">
        <% products.forEach(product => { %>
            <div class="card card-container">
                <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body">
                  <h5 class="card-title"
                  style="font-size: 1.1rem;"
                  ><%= product.name %></h5>
                  <p class="card-text"
                  style="font-size: 1.1rem; font-weight: bold"
                  >$<%= product.price %></p>
                  <div class="card-button-container">
                    <a href="#" class="btn btn-primary">Agregar al carrito</a>
                    <a href="#" class="btn btn-secondary card-button"><i class="fa-solid fa-heart"></i></a>
                  </div>
                </div>
            </div>
        <% }) %>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>